<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/city_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintVertical_weight="1"
        android:gravity="center"
        android:text="@string/city_moscow"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/weather_text"
        app:layout_constraintBottom_toTopOf="@id/inscription_wind_force"
        app:layout_constraintTop_toTopOf="parent"/>


    <TextView
        android:id="@+id/weather_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintVertical_weight="1"
        android:gravity="center"
        android:text="@string/weather_moscow"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/city_text"
        app:layout_constraintBottom_toTopOf="@id/wind_force"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/inscription_wind_force"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintVertical_weight="1"
        android:gravity="center"
        android:text="@string/wind_force"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@id/city_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/wind_force"
        app:layout_constraintBottom_toTopOf="@id/button_choose_city"/>
    <TextView
        android:id="@+id/wind_force"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintVertical_weight="1"
        android:gravity="center"
        android:text="@string/wind_force_moscow"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/weather_text"
        app:layout_constraintStart_toEndOf="@id/inscription_wind_force"
        app:layout_constraintBottom_toTopOf="@id/button_settings"/>

    <Button
        android:id="@+id/button_choose_city"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="@string/choose_city"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_settings"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/inscription_wind_force"
        app:layout_constraintVertical_weight="1" />

    <Button
        android:id="@+id/button_settings"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="@string/settings"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintStart_toEndOf="@id/button_choose_city"
        app:layout_constraintTop_toBottomOf="@id/wind_force"
        app:layout_constraintVertical_weight="1" />




</androidx.constraintlayout.widget.ConstraintLayout>