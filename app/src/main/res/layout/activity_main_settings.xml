<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainSettingsActivity">

    <TextView
        android:id="@+id/text_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/settings"
        android:gravity="center"
        android:textSize="35dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <RadioButton
        android:id="@+id/radio_button_dark_theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Темная тема"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/text_settings"
        app:layout_constraintStart_toStartOf="parent"/>
    <RadioButton
        android:id="@+id/settings_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Место под настройки"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/radio_button_dark_theme"
        app:layout_constraintStart_toStartOf="parent"/>
    <RadioButton
        android:id="@+id/settings_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Место под настройки"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/settings_1"
        app:layout_constraintStart_toStartOf="parent"/>
    <RadioButton
        android:id="@+id/settings_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Место под настройки"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/settings_2"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/button_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:gravity="bottom|center"
        android:text="@string/button_save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>